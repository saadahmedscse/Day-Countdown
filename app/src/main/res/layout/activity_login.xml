<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorDarkBlue"
    tools:context=".Authentication.LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:paddingTop="15dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/be_logo"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/be_white"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/kirsty"
                android:layout_below="@id/be_logo"
                android:text="@string/app_name"
                android:layout_centerHorizontal="true"
                android:textColor="@color/colorWhite"
                android:textStyle="bold"
                android:textSize="42sp"/>

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:fontFamily="@font/cornus"
            android:text="Welcome Back"
            android:textColor="@color/colorWhite"
            android:textSize="24sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingStart="10dp"
            android:orientation="horizontal"
            android:paddingEnd="10dp"
            android:gravity="center_vertical"
            android:background="@drawable/bg_white"
            android:layout_marginTop="7dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/email"/>

            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:background="@drawable/bg_white"
                android:fontFamily="@font/cornus"
                android:hint="Enter you email"
                android:inputType="textEmailAddress"
                android:textColorHint="@color/colorDarkGrey"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingStart="10dp"
            android:orientation="horizontal"
            android:paddingEnd="10dp"
            android:gravity="center_vertical"
            android:background="@drawable/bg_white"
            android:layout_marginTop="10dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/password"/>

            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:background="@drawable/bg_white"
                android:fontFamily="@font/cornus"
                android:hint="Enter you password"
                android:inputType="textPassword"
                android:textColorHint="@color/colorDarkGrey"/>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp">

            <TextView
                android:id="@+id/forgot_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:fontFamily="@font/cornus"
                android:text="Forgot Password?"
                android:textStyle="bold"
                android:textColor="@color/colorWhite"
                android:textSize="20sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/login_btn"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:elevation="3dp"
            android:layout_marginTop="25dp">

            <TextView
                android:id="@+id/login_txt"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/ripple_bg_green"
                android:textStyle="bold"
                android:text="Login"
                android:textSize="20sp"
                android:fontFamily="@font/cornus"
                android:textColor="@color/colorWhite"
                android:gravity="center"/>



            <ProgressBar
                android:id="@+id/progress_bar"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:visibility="gone"
                android:indeterminateTint="@color/colorWhite"
                android:layout_centerInParent="true"/>

        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="OR"
            android:fontFamily="@font/cornus"
            android:textColor="@color/colorLightGrey"
            android:gravity="center"/>

        <RelativeLayout
            android:id="@+id/signup_btn"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:elevation="3dp"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/ripple_bg_blue"
                android:textStyle="bold"
                android:text="Create new account"
                android:textSize="20sp"
                android:fontFamily="@font/cornus"
                android:textColor="@color/colorWhite"
                android:gravity="center"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/cornus"
                android:textSize="16sp"
                android:textColor="@color/colorLightGrey"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:text="Copyright Â©2017-2021 Blazed Enigma"/>

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>